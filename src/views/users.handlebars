      <!-- Cambiar Contraseña -->
      <h3 class="mb-3">Actualizar/ Cambiar contraseña</h3>
      <form action="/api/user/changePassword" method="POST">
        <div class="mb-3">
          <label for="currentPassword" class="form-label">Contraseña actual:</label>
          <input type="password" name="currentPassword" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="newPassword" class="form-label">Nueva Contraseña:</label>
          <input type="password" name="newPassword" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="confirmNewPassword" class="form-label">Confirmar nueva contraseña:</label>
          <input type="password" name="confirmNewPassword" class="form-control" required>
        </div>
        <input type="hidden" name="userId" value="{{_id}}">
        <button type="submit" class="btn btn-primary">Confirmar</button>
      </form>
    </div>
  </div>

